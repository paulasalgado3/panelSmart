html
  head
    link(rel='stylesheet', href='/style/panelDispositivos.css')
    script(src='metodos.js')
    script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
    script.
      window.addEventListener("click", validarToken);
  body(onload='validarToken();')
    table#dispositivos
      thead
        tr
          th(colspan='2') Dispositivo: !{dispositivo.id}
      tbody
        tr
          td Tipo        
          td
            select(id="tiposDispositivos", name="Tipos de Dispositivos", )
              each tipo in tipos
                if (dispositivo.tipo == tipo)
                  option(value=tipo selected="selected") #{tipo}
                else
                  option(value=tipo) #{tipo} 
        tr
          td Ubicacion
        
          td 
            input(type="text", name="ubicacion", id="ubicacion", class="ubicacion", value=dispositivo.ubicacion)
        tr
          td Borrar &nbsp; 
             input(type="checkbox", name="borrar", id="borrar", onchange="document.getElementById('btnborrar').disabled = !this.checked;")
          td 
            button.btn(onclick="", id="btnborrar") Borrar
        tr
          td(colspan='2')
            button.btn(onclick="modificarDispositivo('"+dispositivo.id+"');") Aceptar 
            button.btn(onclick="regresar('_panelDispositivos');") Cancelar
        