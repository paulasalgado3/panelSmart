html
  body
    link(rel='stylesheet', href='/style/panelDispositivos.css')
    script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
    table
      thead
        tr
        th Dispositivo: !{id}
      tbody
        tr
          td Tipo de dispositivo
        tr
          td
            select(id="tiposDispositivos", name="Tipos de Dispositivos")
              each tipo in tipos
                if (dispositivo.tipo == tipo)
                  option(value=tipo selected="selected") #{tipo}
                else
                  option(value=tipo) #{tipo} 
        tr
          td Ubicacion
        tr
          td 
            input(type="text", name="ubicacion" value=dispositivo.ubicacion)
        tr
          td
            button(onclick='') Aceptar 
            button(onclick='') Cancelar
        